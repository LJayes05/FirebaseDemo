<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.WelcomeController">
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>

<Label text="Welcome to Firebase Demo">
    <font>
        <Font size="24.0" />
    </font>
</Label>

<VBox spacing="10.0">
    <Label text="Email/Username:" />
    <TextField fx:id="emailTextField" promptText="Enter Email" />

    <Label text="Password:" />
    <PasswordField fx:id="passwordField" promptText="Enter Password" />
</VBox>

<VBox alignment="CENTER" spacing="10.0">
    <Button onAction="#handleRegister" text="Register" prefWidth="150" />
    <Button onAction="#handleSignIn" text="Sign In" prefWidth="150" />
    <Button onAction="#switchToSecondary" text="Go to Secondary View"/>
</VBox>

<Label fx:id="statusLabel" text="Status: Ready" />
</VBox>