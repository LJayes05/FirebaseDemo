<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>



<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aydin.firebasedemo.PrimaryController"
      stylesheets="@style.css"
      alignment="CENTER"
      spacing="15"
      prefWidth="800" prefHeight="600"
      styleClass="vbox">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label styleClass="subtitle-label" text="CSC325-SW Engineering Demo" />

    <Region prefHeight="10"/>

    <TextField fx:id="nameTextField" promptText="name" />
    <TextField fx:id="ageTextField" promptText="age" />
    <TextField fx:id="phoneTextField" promptText="phone"/>

    <?import javafx.scene.layout.Region?>

    <HBox alignment="TOP_CENTER" prefHeight="55.0" prefWidth="518.0" spacing="10.0">
            <Button fx:id="readButton" mnemonicParsing="false" onAction="#readButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Read" />
            <Button fx:id="writeButton" mnemonicParsing="false" onAction="#writeButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Write" />
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Register" />
            <Button fx:id="switchSecondaryViewButton" onAction="#switchToSecondary" prefHeight="50.0" prefWidth="180.0" text="Switch to Secondary View" />
    </HBox>
    <TextArea fx:id="outputTextArea" prefHeight="218.0" prefWidth="507.0" VBox.vgrow="ALWAYS" />
</VBox>