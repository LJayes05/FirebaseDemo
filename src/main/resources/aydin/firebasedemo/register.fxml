<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="15"
      styleClass="vbox"
      stylesheets="@style.css"
      fx:controller="aydin.firebasedemo.RegisterController"
      prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="50" left="50" right="50" top="50"/>
    </padding>

    <Label styleClass="title-label" text="New User? Register Now!"/>

    <Region prefHeight="10"/>

    <TextField fx:id="emailTextField" promptText="Email" prefWidth="300.0" />
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300.0" />
    <TextField fx:id="showNameTextField" promptText="Display Name" prefWidth="300.0" />

    <Region prefHeight="10"/>

    <Button fx:id="register" onAction="#handleRegister" styleClass="success-button" prefWidth="250" text="Register"/>
    <Button fx:id="Back" onAction="#handleBack" styleClass="secondary-button" prefWidth="250" text="Sign In!"/>

    <Label fx:id="statusLabel" styleClass="status-label"/>

</VBox>
